import random
import string

# ANSI Colors
GREEN = '\033[92m'
CYAN = '\033[96m'
RED = '\033[91m'
RESET = '\033[0m'

def generate_password(length=12, use_digits=True, use_symbols=True):
    characters = string.ascii_letters  # aâ€“z, Aâ€“Z
    if use_digits:
        characters += string.digits     # 0â€“9
    if use_symbols:
        characters += string.punctuation  # !@#$...

    if length < 6:
        print(f"{RED}âš ï¸ Password too short. Minimum is 6 characters.{RESET}")
        return ""

    password = ''.join(random.choice(characters) for _ in range(length))
    return password

# âœ¨ Interactive Menu
print(f"{CYAN}ðŸ” Welcome to the Password Generator!{RESET}")
length = int(input("ðŸ”¢ Enter password length (e.g. 12): "))
use_digits = input("ðŸ”¢ Include digits? (yes/no): ").lower() == 'yes'
use_symbols = input("ðŸ”£ Include symbols? (yes/no): ").lower() == 'yes'

password = generate_password(length, use_digits, use_symbols)
if password:
    print(f"\n{GREEN}Your secure password: {password}{RESET}")
